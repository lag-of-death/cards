{
  "name": "deck-of-cards",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "axios": "^0.19.0",
    "eslint-import-resolver-lerna": "^1.1.0",
    "express": "^4.17.1",
    "nodemon": "^2.0.1",
    "@decks/server-repository": "1.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-card-flip": "^1.0.10",
    "react-dom": "^16.12.0",
    "react-redux": "^7.1.3",
    "react-scripts": "3.3.0",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "lint": "eslint ./server ./src ./server.js",
    "build": "react-scripts build",
    "test-client": "react-scripts test --watchAll=false",
    "test-server": "jest server/useCases.test.js",
    "test": "npm run test-client && npm run test-server",
    "eject": "react-scripts eject",
    "watch": "cra-build-watch",
    "watch-server": "nodemon server.js",
    "start": "yarn && yarn build && node server.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      "since 2010"
    ],
    "development": [
      "since 2010"
    ]
  },
  "devDependencies": {
    "cra-build-watch": "^3.0.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-jsx-a11y": "^6.2.3"
  }
}
